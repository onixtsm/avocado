!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = csrf_meta_tags
    = csp_meta_tag
    %title onix's website
    = content_for :head
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag :application, controller_name unless devise_controller?
    = javascript_packs_with_chunks_tag 'application', 'data-turbolinks-track': 'reload'
    - if File.exist?("#{Rails.root}/app/javascript/packs/#{controller_name}.js")
      = javascript_pack_tag params[:controller]
    - if File.exist?("#{Rails.root}/app/javascript/packs/#{controller_name}/#{action_name}.js")
      = javascript_pack_tag params[:controller]+ "/" + params[:action]
  %body
    = render 'shared/nav'
    = yield
