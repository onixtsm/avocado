#blogs
  - @blog.each do |b|
    .blog_box
      %p.post_author= b.name
      %h3.post_heading= link_to b.title, b
      %p.post_tag= b.tag
      - sentence_array= b.content.split(".")
      - first_sentence= sentence_array[0] + "." if sentence_array[0]
      - second_sentence= sentence_array[1].split.first + "..." if sentence_array[1]
      %p.post_body= "#{first_sentence} #{second_sentence}"
      %p.date= get_date(b)
