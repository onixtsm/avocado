!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title onix's website
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag params[:controller]
    = javascript_packs_with_chunks_tag 'application', 'data-turbolinks-track': 'reload'
    - if File.exist? ("#{Rails.root}/app/javascript/packs/#{controller_name}.js")
      = javascript_pack_tag params[:controller]
    - if File.exist? ("#{Rails.root}/app/javascript/packs/#{controller_name}") 
      - js_source = controller_name
      - if File.exist? ("#{Rails.root}/app/javascript/packs/#{controller_name}/#{action_name}.js")
        - js_source += "/" + action_name
      = javascript_pack_tag js_source
  %body
    = yield
